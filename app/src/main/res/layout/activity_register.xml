<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:src="@drawable/e"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/registration_phone_Number"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="82dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_designs"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#1B859B"
        android:textColorHint="#1B859B"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/registration_your_name"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration_phone_Number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_designs"
        android:hint="Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#1B859B"
        android:textColorHint="#1B859B"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/registraion_password"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration_your_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_designs"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#1B859B"
        android:textColorHint="#1B859B"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registraion_password"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:fontFamily="sans-serif-condensed"
        android:padding="20dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />


</RelativeLayout>